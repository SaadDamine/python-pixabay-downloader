<Interface>:
    search : search
    FloatLayout:
        cols:4
        id: floatlayout
                   
        BoxLayout:
            orientation: 'horizontal'
            pos_hint: {'left': 1}  
            TextInput:
                pos_hint: {'left': 1}            
                size_hint: 0.7, 0.1
                id: search
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4
            Button:
                pos_hint: {'right': 1}                
                size_hint: 0.2, 0.1
                font_size: (root.width**2 + root.height**2) / 13**4
                text: "Search"
                on_release:                
                    root.find()
       
            
