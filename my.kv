<Interface>:
    search : search
    FloatLayout:
        cols:3

       
        BoxLayout:
            orientation: 'horizontal'
            Label:
                text: "Search"
                size_hint: 0.8, 0.2
                pos_hint: {"x":0.1, "top":1}
                font_size: (root.width**2 + root.height**2) / 14**4


            TextInput:
                
                size_hint: 0.4, 0.1
                id: search
                multiline: False
                font_size: (root.width**2 + root.height**2) / 14**4
            Button:
                
                size_hint: 0.2, 0.1
                font_size: (root.width**2 + root.height**2) / 13**4
                text: "Search"
                on_release:                
                    root.find()
        FloatLayout:
            size: root.width, root.height/2
            id: floatlayout
            
